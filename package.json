{
  "name": "@garage44/workspace",
  "version": "1.0.0",
  "author": "Garage44",
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/bun": "^1.2.17",
    "@types/node": "^22.13.13",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.17.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-react": "^7.37.5",
    "lefthook": "^2.0.4",
    "lightningcss": "^1.30.2",
    "lint-staged": "^15.2.0",
    "oxlint": "^1.7.0",
    "playwright": "^1.48.0",
    "stylelint": "^16.25.0",
    "stylelint-order": "^7.0.0"
  },
  "description": "Garage44 monorepo - Modern web applications built with Bun, Preact, and DeepSignal",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "bun run --filter './packages/**' build",
    "clean": "rm bun.lock;bun run --filter './packages/**' clean",
    "lint:ts": "bun run --filter './packages/**' lint:ts",
    "lint:ts-style": "bun run --filter './packages/**' lint:ts-style",
    "lint:css": "bun run --filter './packages/**' lint:css",
    "malkovich": "bun packages/malkovich/service.ts",
    "playwright:install": "bunx playwright install chromium",
    "prepublishOnly": "bun run lint:ts && bun run build",
    "publish": "bun lib/publish-workspace.ts",
    "screenshots": "bun scripts/take-screenshots.ts",
    "screenshots:test": "bun scripts/test-login.ts",
    "test": "bun run --filter './packages/**' test"
  },
  "type": "module",
  "workspaces": {
    "catalog": {
      "i18next": "25.6.0",
      "@preact/signals": "^2.0.2",
      "classnames": "^2.5.1",
      "deepsignal": "^1.6.0",
      "figlet": "^1.8.0",
      "fs-extra": "^11.3.2",
      "path-to-regexp": "^8.2.0",
      "picocolors": "^1.1.1",
      "preact": "^10.26.5",
      "preact-router": "^4.1.2",
      "preact-transitioning": "^1.5.2",
      "rc": "^1.2.8",
      "tippy.js": "^6.3.7",
      "yargs": "^18.0.0"
    },
    "catalogs": {
      "dev": {
        "@types/node": "^22.13.14",
        "@types/yargs": "^17.0.32",
        "bun-types": "^1.2.7",
        "eslint": "^9.17.0",
        "oxlint": "^0.16.6",
        "stylelint": "^16.17.0",
        "stylelint-order": "^7.0.0"
      }
    },
    "packages": ["packages/*"]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "oxlint --fix",
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  }
}
