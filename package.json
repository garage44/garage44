{
  "name": "@garage44/workspace",
  "version": "1.0.0",
  "author": "Garage44",
  "description": "Garage44 monorepo - Modern web applications built with Bun, Preact, and DeepSignal",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "bun run --filter './packages/**' build",
    "clean": "rm bun.lock;rm ~/.bun/install/cache;bun run --filter './packages/**' clean",
    "lint:ts": "bun run --filter './packages/**' lint:ts",
    "lint:css": "bun run --filter './packages/**' lint:css",
    "playwright:install": "bunx playwright install chromium",
    "prepublishOnly": "bun run lint:ts && bun run build",
    "publish": "bun lib/publish-workspace.ts",
    "screenshots": "bun scripts/take-screenshots.ts",
    "screenshots:test": "bun scripts/test-login.ts",
    "test": "bun run --filter './packages/**' test"
  },
  "type": "module",
  "workspaces": {
    "catalog": {
      "@preact/signals": "^2.0.2",
      "classnames": "^2.5.1",
      "deepsignal": "^1.6.0",
      "preact": "^10.26.5",
      "preact-router": "^4.1.2"
    },
    "catalogs": {},
    "packages": ["packages/*"]
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/bun": "^1.2.17",
    "@types/node": "^22.13.13",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-react": "^7.37.5",
    "lightningcss": "^1.30.2",
    "oxlint": "^1.7.0",
    "playwright": "^1.48.0",
    "stylelint": "^16.25.0",
    "stylelint-order": "^7.0.0"
  }
}
