{
  "name": "@garage44/nonlinear",
  "description": "Nonlinear - AI-Powered Automated Project Management",
  "version": "0.1.0",
  "author": "Garage44",
  "main": "service.ts",
  "bin": {
    "nonlinear": "./service.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@garage44/bunchy": "workspace:*",
    "@garage44/common": "workspace:*",
    "@preact/signals": "catalog:",
    "classnames": "catalog:",
    "deepsignal": "catalog:",
    "figlet": "catalog:",
    "fs-extra": "catalog:",
    "i18next": "catalog:",
    "picocolors": "catalog:",
    "preact": "catalog:",
    "preact-router": "catalog:",
    "rc": "catalog:",
    "yargs": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:dev",
    "bun-types": "catalog:dev",
    "eslint": "catalog:dev",
    "oxlint": "catalog:dev",
    "stylelint": "catalog:dev",
    "stylelint-order": "catalog:dev"
  },
  "exports": {
    ".": "./index.ts"
  },
  "files": [
    "api/*",
    "index.ts",
    "lib/*",
    "public/**/*",
    "LICENSE.md",
    "README.md",
    "service.ts"
  ],
  "license": "AGPL",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "NODE_ENV=production BUN_ENV=development bun service.ts build",
    "clean": "rm -rf dist;rm -rf node_modules",
    "dev": "NODE_ENV=development BUN_ENV=development bun run --watch service.ts start",
    "server": "NODE_ENV=production BUN_ENV=production bun service.ts start",
    "lint:css": "stylelint src/**/*.css",
    "lint:ts-syntax": "oxlint **/*.{ts,tsx} --config ../../.oxlintrc.json",
    "lint:ts-style": "eslint **/*.{ts,tsx} --config ../../eslint.config.js",
    "lint:ts-types": "bunx @typescript/native-preview --noEmit",
    "test": "bun test"
  },
  "type": "module"
}
