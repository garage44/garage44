{
  "name": "@garage44/expressio",
  "description": "Expressio CE - I18n for humans, through AI...",
  "version": "2.1.20",
  "author": "Garage44",
  "main": "service.ts",
  "bin": {
    "expressio": "./service.ts"
  },
  "dependencies": {
    "@garage44/bunchy": "workspace:^",
    "@garage44/common": "workspace:^",
    "@garage44/enola": "workspace:^",
    "classnames": "catalog:",
    "deepsignal": "catalog:",
    "figlet": "catalog:",
    "fs-extra": "catalog:",
    "i18next": "^25.6.0",
    "picocolors": "catalog:",
    "preact": "catalog:",
    "preact-router": "catalog:",
    "rc": "catalog:",
    "yargs": "catalog:"
  },
  "files": [
    "api/*",
    "lib/*",
    "public/**/*",
    "LICENSE.md",
    "README.md",
    "service.ts"
  ],
  "license": "AGPL",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "NODE_ENV=production BUN_ENV=development bun service.ts build",
    "clean": "rm -rf dist;rm -rf node_modules",
    "dev": "NODE_ENV=development BUN_ENV=development bun run --watch service.ts start",
    "lint:css": "stylelint src/**/*.css",
    "lint:ts": "oxlint **/*.{ts,tsx} --config ../../.oxlintrc.json;eslint **/*.{ts,tsx}",
    "test": "bun test"
  },
  "type": "module"
}
