# Nginx configuration for Garage44 services
# Place this in /etc/nginx/sites-available/garage44
# Then symlink to /etc/nginx/sites-enabled/garage44

# Expressio service - expressio.garage44.org
server {
    listen 80;
    server_name expressio.garage44.org;

    location / {
        proxy_pass http://127.0.0.1:3030;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

