[Unit]
Description=Styleguide design system service
After=network.target

[Service]
Type=simple
User=garage44
Group=garage44
WorkingDirectory=/home/garage44/garage44/packages/styleguide
Environment="NODE_ENV=production"
Environment="BUN_ENV=development"
ExecStart=bun run dev -- --port 8080
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
